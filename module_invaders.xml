<?xml version="1.0" encoding="UTF-8"?>
<project name="module_invaders" default="compile.module.invaders">
  <dirname property="module.invaders.basedir" file="${ant.file.module_invaders}"/>
  
  <property name="module.jdk.home.invaders" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.invaders" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.invaders" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.invaders" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="invaders.output.dir" value="${module.invaders.basedir}/bin"/>
  <property name="invaders.testoutput.dir" value="${module.invaders.basedir}/bin"/>
  
  <path id="invaders.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="invaders.module.production.classpath">
    <path refid="${module.jdk.classpath.invaders}"/>
    <pathelement location="${basedir}/../../../../../invader.jar"/>
  </path>
  
  <path id="invaders.runtime.production.module.classpath">
    <pathelement location="${invaders.output.dir}"/>
    <pathelement location="${basedir}/../../../../../invader.jar"/>
  </path>
  
  <path id="invaders.module.classpath">
    <pathelement location="${invaders.output.dir}"/>
    <path refid="${module.jdk.classpath.invaders}"/>
    <pathelement location="${basedir}/../../../../../invader.jar"/>
  </path>
  
  <path id="invaders.runtime.module.classpath">
    <pathelement location="${invaders.output.dir}"/>
    <pathelement location="${basedir}/../../../../../invader.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.invaders">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.invaders">
    <patternset refid="excluded.from.module.invaders"/>
  </patternset>
  
  <path id="invaders.module.sourcepath">
    <dirset dir="${module.invaders.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.invaders" depends="compile.module.invaders.production,compile.module.invaders.tests" description="Compile module Invaders"/>
  
  <target name="compile.module.invaders.production" depends="register.custom.compilers" description="Compile module Invaders; production classes">
    <mkdir dir="${invaders.output.dir}"/>
    <javac2 destdir="${invaders.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.invaders}/javac">
      <compilerarg line="${compiler.args.invaders}"/>
      <bootclasspath refid="invaders.module.bootclasspath"/>
      <classpath refid="invaders.module.production.classpath"/>
      <src refid="invaders.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.invaders"/>
    </javac2>
    
    <copy todir="${invaders.output.dir}">
      <fileset dir="${module.invaders.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.invaders.tests" depends="register.custom.compilers,compile.module.invaders.production" description="compile module Invaders; test classes" unless="skip.tests"/>
  
  <target name="clean.module.invaders" description="cleanup module">
    <delete dir="${invaders.output.dir}"/>
    <delete dir="${invaders.testoutput.dir}"/>
  </target>
</project>